<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CitizenDataFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="@color/main_color"
        android:outlineSpotShadowColor="@color/main_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/main_color"
            android:backgroundTint="@color/main_color"
            android:outlineAmbientShadowColor="@color/main_color"
            android:outlineSpotShadowColor="@color/main_color"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="Olimjon Rustamov"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/appbarlayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_horizontal"
                android:id="@+id/image"
                android:scaleType="fitXY"
                android:rotation="-90"
                android:src="@drawable/ic_baseline_image_24"
                android:background="@android:color/transparent"
                android:layout_width="90dp"
                android:layout_height="120dp" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/name"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/surname"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/patronomic"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/region"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/city"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/adress"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/passport_number"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/date_of_issue"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/date_of_expiry"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:id="@+id/sex"
                android:text="Ismi: Olimjon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>