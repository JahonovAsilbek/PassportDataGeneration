<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/border_dialog"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/choose_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Rasm yuklash turini tanlang"
        android:textColor="@color/my_black_color"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choose_camera_btn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/border_btn"
        android:foreground="?selectableItemBackgroundBorderless"
        android:text="CAMERA"
        android:textColor="@color/main_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/choose_gallery_btn"
        app:layout_constraintTop_toBottomOf="@id/choose_text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/choose_gallery_btn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/border_btn"
        android:foreground="?selectableItemBackgroundBorderless"
        android:text="GALLERY"
        android:textColor="@color/main_color"
        app:layout_constraintLeft_toRightOf="@id/choose_camera_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_text" />

    <Button
        android:id="@+id/dialog_bekor_qilish"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        android:shadowColor="@android:color/transparent"
        android:text="Bekor qilish"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_gallery_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>